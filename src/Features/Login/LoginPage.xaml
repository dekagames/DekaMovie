<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DekaMovie.Features.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage">
    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Bem-vindo ao Busca Filmes 5 " />

        <Button Command="{Binding LoginCommand}" Text="Entrar com TMDb" />
    </VerticalStackLayout>
</ContentPage>